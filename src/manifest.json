{
  "manifest_version": 3,
  "name": "AI Semantic Highlighter",
  "version": "1.0",
  "description": "Uses Gemini to analyze and highlight semantic categories in articles",
  "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
